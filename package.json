{
  "name": "mes-result-processing-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A serverless microservice responsible for responsible for passing practical driving test results to internal DVSA systems for processing, such as TARS.",
  "homepage": "https://github.com/dvsa/mes-result-processing-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-result-processing-service.git"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "rm -rf build && tsc",
    "compile-no-emit": "tsc --noEmit -p .",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "security-scan": "git secrets --scan",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test"
  },
  "dependencies": {
    "@dvsa/mes-microservice-common": "0.8.1",
    "aws-sdk": "^2.1013.0",
    "axios": "^0.23.0",
    "bottleneck": "^2.19.5",
    "inversify": "^6.0.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@dvsa/mes-test-schema": "3.38.4",
    "@types/aws-lambda": "^8.10.84",
    "@types/jasmine": "^3.10.0",
    "@types/lodash": "^4.14.176",
    "@types/node": "^14.17.5",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/eslint-plugin-tslint": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "aws-lambda-test-utils": "^1.3.0",
    "eslint": "^8.1.0",
    "eslint-plugin-import": "^2.25.2",
    "husky": "^1.3.1",
    "jasmine": "^3.10.0",
    "jasmine-spec-reporter": "^7.0.0",
    "nock": "^13.1.4",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^3.21.0",
    "serverless-dotenv-plugin": "^2.4.2",
    "serverless-offline": "^8.7.0",
    "serverless-webpack": "^5.6.1",
    "source-map-support": "^0.5.20",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.3.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^4.4.4",
    "webpack": "^5.59.0",
    "webpack-cli": "^4.9.1",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test",
      "pre-commit": "run-s lint:fix lint compile-no-emit"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-result-processing-service/issues"
  }
}
